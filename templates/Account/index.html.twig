{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="account-page">
    <div class="account-container">

        <h1>Mon compte</h1>

        {% for message in app.flashes('success') %}
            <div class="flash-success">{{ message }}</div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="flash-error">{{ message }}</div>
        {% endfor %}

        <div class="account-info">
        <form action="{{ path('account_update') }}" method="post">
            <input type="hidden" name="user_id" value="{{ app.user.id }}">
            <input type="hidden" name="_token" value="{{ csrf_token('account_update') }}">

            <label for="name">Prénom</label>
            <input type="text" id="name" name="name" value="{{ app.user.name }}" required>

            <label for="surname">Nom</label>
            <input type="text" id="surname" name="surname" value="{{ app.user.surname }}" required>

            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="{{ app.user.email }}" required>

            <label for="adresse">Adresse</label>
            <input type="text" id="adresse" name="adresse" value="{{ app.user.adresse }}" required>

            <button type="submit">Mettre à jour mes informations</button>
        </form>
        </div>

        {% if 'ROLE_ADMIN' in app.user.roles %}
            <div class="admin-button">
                <a href="{{ path('admin_dashboard') }}">
                    <button type="button">Accéder à l'administration</button>
                </a>
            </div>
        {% endif %}

        <hr>

        <h2>Gestion des cookies</h2>

{% set prefs = cookiePrefs ?? { necessary: false, analytics: false } %}

<form id="cookie-settings-form">
    <label>
        <input type="checkbox" name="necessary" {% if prefs.necessary %}checked{% endif %} required>
        Cookies nécessaires (obligatoires pour naviguer)
    </label>

    <label>
        <input type="checkbox" name="analytics" {% if prefs.analytics %}checked{% endif %}>
        Cookies d'analyse (optionnels)
    </label>

    <button type="submit">Enregistrer mes préférences</button>
    <button type="button" id="reset-cookies">Réinitialiser mes choix</button>
</form>

<div id="cookie-status"></div>

{% endblock %}