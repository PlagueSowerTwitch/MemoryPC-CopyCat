{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="account-page">
    <div class="account-container">

        <h1>Mon compte</h1>

        {# Affichage des messages flash #}
        {% for message in app.flashes('success') %}
            <div class="flash-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="flash-error">{{ message }}</div>
        {% endfor %}

        <div class="account-info">
            <form action="{{ path('account_update') }}" method="post">
                
                <label for="name">Prénom</label>
                <input type="text" id="name" name="name" value="{{ app.user.name }}" required>

                <label for="surname">Nom</label>
                <input type="text" id="surname" name="surname" value="{{ app.user.surname }}" required>

                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="{{ app.user.email }}" required>

                <label for="adresse">Adresse</label>
                <input type="text" id="adresse" name="adresse" value="{{ app.user.adresse }}" required>

                <button type="submit">Mettre à jour mes informations</button>
            </form>
        </div>

        {# Si l'utilisateur est admin, afficher le bouton Admin #}
        {% if 'ROLE_ADMIN' in app.user.roles %}
            <div class="admin-button">
                <a href="{{ path('admin_dashboard') }}">
                    <button type="button">Accéder à l'administration</button>
                </a>
            </div>
        {% endif %}

    </div>
</div>
{% endblock %}